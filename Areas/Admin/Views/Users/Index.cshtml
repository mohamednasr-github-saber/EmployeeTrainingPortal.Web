@model IEnumerable<EmployeeTrainingPortal.Web.Areas.Admin.ViewModels.UserVM>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Manage Users</h2>
    <a asp-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary mb-3">+ Add User</a>

    <a asp-route-area="Admin" asp-controller="Users" asp-action="Create" class="btn btn-primary mb-3">+ Add User</a>
    
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-primary text-center">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Current Role</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge
                            @(user.Role == "Admin" ? "bg-danger" :
                              user.Role == "Instructor" ? "bg-info text-dark" :
                              "bg-secondary")">
                            @user.Role
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning me-1">
                            <i class="bi bi-pencil-square"></i> Change
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
