@model ResendEmailConfirmationVM

@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            @if (TempData["Notification"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Notification"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Notification-error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Notification-error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <h3 class="mb-4 text-center">Resend Email Confirmation</h3>

            <form method="post" autocomplete="off">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserNameOREmail" class="form-label"></label>
                    <input asp-for="UserNameOREmail" class="form-control" />
                    <span asp-validation-for="UserNameOREmail" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
