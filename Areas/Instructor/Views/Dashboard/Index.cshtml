@{
    ViewData["Title"] = "Instructor Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="text-center">
        <h2>Welcome, Instructor</h2>
        <p class="lead">This is your dashboard. You can manage your courses and assessments here.</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">My Courses</h5>
                    <p class="card-text">View and manage the courses you're assigned to.</p>
                    <a href="#" class="btn btn-primary">View Courses</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Assessments</h5>
                    <p class="card-text">Create and manage assessments for your students.</p>
                    <a href="#" class="btn btn-success">Manage Assessments</a>
                </div>
            </div>
        </div>
    </div>
</div>
